<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/fav_pokemon_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/fav_pokemon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textColor="#000000"
            android:textSize="26sp"
            android:textStyle="italic"
            android:layout_toEndOf="@+id/fav_pokemon_image"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/fav_pokemon_baseExperience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Base experience: "
            android:textColor="#000000"
            android:textSize="26sp"
            android:textStyle="italic"
            android:layout_toEndOf="@+id/fav_pokemon_image"
            android:layout_below="@+id/fav_pokemon_name"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/fav_pokemon_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type: "
            android:textColor="#000000"
            android:textSize="26sp"
            android:textStyle="italic"
            android:layout_toEndOf="@+id/fav_pokemon_image"
            android:layout_below="@+id/fav_pokemon_baseExperience"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/fav_pokemon_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moves: "
            android:textColor="#000000"
            android:textSize="26sp"
            android:textStyle="italic"
            android:layout_toEndOf="@+id/fav_pokemon_image"
            android:layout_below="@+id/fav_pokemon_type"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/fav_pokemon_stat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stats: "
            android:textColor="#000000"
            android:textSize="26sp"
            android:textStyle="italic"
            android:layout_toEndOf="@+id/fav_pokemon_image"
            android:layout_below="@+id/fav_pokemon_move"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <Button
            android:id="@+id/fav_pokemon_share"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_share_data"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>